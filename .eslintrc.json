{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:cypress/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "Cypress": "readonly",
    "cy": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "jest", "cypress"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "jest/valid-expect": "error",
    "jest/prefer-inline-snapshots": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "max-lines": ["error", 100],
    "max-len": ["error", { "code": 80 }],
    "max-lines-per-function": ["error", 100],
    "complexity": ["error", 5],
    "max-params": ["error", 3]
  }
}
